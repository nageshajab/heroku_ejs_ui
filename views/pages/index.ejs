<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">

  <header>
    <%- include('../partials/header'); %>
  </header>

  <main>
    <table class="table">
      <tr>
        <th>Name</th>
        <th>Ott</th>
        <th>Type</th>
        <th>Rating</th>
        <th></th>
      </tr>
      <% for(var i=0;i < data.length;i++) { %>
        <tr>
          <td>
            <%= data[i].name %>
          </td>
          <td>
            <%= data[i].ott %>
          </td>
          <td>
            <%= data[i].type %>
          </td>
          <td>
            <%= data[i].rating %>
          </td>
          <td>
            <form action="/watchlist/delete" method="post">
              <input type="hidden" name="id" value=<%= data[i]._id %>  name="id">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% } %>
    </table>
  </main>
  <footer>
    <%- include('../partials/footer'); %>
  </footer>
  <script>
    function deleteme(id) {
      $.post('/watchlist/delete', id);
    }
  </script>
</body>

</html>