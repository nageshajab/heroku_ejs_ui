<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>

</head>

<body class="container">

  <header>
    <%- include('../partials/header'); %>
  </header>

  <main>
    <% if( msg.length!=0) { %>
      <div class="alert alert-danger " role="alert">
        <%= msg %>
      </div>
      <% } %>
        <%- include('../partials/loader'); %>
          <table class="table">
            <tr>
              <th>Name</th>
              <th>Ott</th>
              <th>Type</th>
              <th>Rating</th>
              <th></th>
            </tr>
            <% if (typeof data !='undefined' ) { %>
              <% for(var i=0;i < data.length;i++) { %>
                <tr>
                  <td>
                    <%= data[i].name %>
                  </td>
                  <td>
                    <%= data[i].ott %>
                  </td>
                  <td>
                    <%= data[i].type %>
                  </td>
                  <td>
                    <%= data[i].rating %>
                  </td>
                  <td>
                    <!-- <form action="/watchlist/delete" method="post"> -->
                    <!-- <button type="submit">Delete</button> -->
                    <button type="button" id='<%= data[i]._id %>'
                      onclick="deleteme('<%= data[i]._id %>')">Delete</button>
                    <!-- </form> -->
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </table>
  </main>
  <footer>
    <%- include('../partials/footer'); %>
  </footer>
  <script src="/scripts/watchlist.js"></script>
</body>

</html>